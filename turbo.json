{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["NODE_ENV", "DATABASE_URL", "EVENT_STAGE", "ADMIN_LOCKED"],
  "pipeline": {
    "build": {
      "dependsOn": ["@cid/db#db:generate", "^build"],
      "outputs": ["dist/**", ".next/**", "api/**", "public/build/**"]
    },
    "dev": {
      "dependsOn": ["@cid/db#db:generate"],
      "cache": false
    },
    "typecheck": {
      "dependsOn": ["@cid/db#db:generate"]
    },
    "lint": {
      "dependsOn": ["typecheck"]
    },
    "db:generate": {
      "cache": false
    }
  }
}
